<h2>Comments</h2>
<hr>
<% unless current_user.is_a? GuestUser %>
	<%= form_for @comment, url: '#' do |f| %>
		<div class="form-group">
			<%= f.label :content %>
			<%= f.text_area :content, rows: 6, class: "form-control"%>
		</div>

		<div class="form-group">
			<%= f.submit "Add a Comment", class: "btn btn-primary" %>
		</div>
	<% end %>
<% end %>