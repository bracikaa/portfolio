<div class="blog-post">
	<h2 class="blog-post-title"><%= link_to blog.title, blog %></h2>
	<p class="blog-post-meta"><%= distance_of_time_in_words(blog.created_at, Time.now) %> ago by <%= link_to "Admin", root_path %></p>
	<% if show_to_admin? %>
		<p class="blog-post-meta">
			<%= link_to capitalize_name(blog.status), toggle_status_blog_path(blog) %> / 
			<%= link_to 'Edit', edit_blog_path(blog) %> / 
			<%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></p>
		<p>
	<% end %>
	<%= blog.body %></p>
	<hr>
</div><!-- /.blog-post -->
